<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.AboodFinalprojectbooklibrary">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Book">

        <activity
            android:name="com.example.AboodFinalprojectbooklibrary.UpdateBook"
            android:label="@string/title_activity_aupdate_book"
            android:theme="@style/Theme.Book.NoActionBar"
            android:exported="true"

            ></activity>
        <activity android:name="com.example.AboodFinalprojectbooklibrary.EditBookScreen"
            android:exported="true"/>
        <activity android:name="com.example.AboodFinalprojectbooklibrary.SelectBook"
            android:exported="true"/>
        <activity android:name="com.example.AboodFinalprojectbooklibrary.AddCategoryScreen"
            android:exported="true"/>
        <activity android:name="com.example.AboodFinalprojectbooklibrary.AddBook"
            android:exported="true"/>
        <activity android:name="com.example.AboodFinalprojectbooklibrary.LibraryScreen"
            android:exported="true"/>
        <activity android:name="com.example.AboodFinalprojectbooklibrary.FavoritesScreen"
            android:exported="true"/>
        <activity android:name="com.example.AboodFinalprojectbooklibrary.SplasScreeen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.AboodFinalprojectbooklibrary.MainActivity"
            android:exported="true" />

    </application>

</manifest>